{
  "name": "form-actions-nuxt",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* run build",
    "nx:build": "nx run-many --target=build --p @hebilicious/form-actions-nuxt",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "pnpm lint:fix && bumpp -r -x \"pnpm run changelog\" --all",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.4",
    "@antfu/ni": "^0.21.3",
    "@nuxt/test-utils": "^3.5.2",
    "@types/node": "^18.16.16",
    "bumpp": "^9.1.0",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "8.42.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "lint-staged": "^13.2.2",
    "nx": "^16.3.2",
    "pnpm": "8.6.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "vitest": "^0.31.4"
  },
  "pnpm": {
    "patchedDependencies": {
      "nitropack@2.4.1": "patches/nitropack@2.4.1.patch"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
